<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
>

    <Space
        android:id="@+id/mian_anchor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main2"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main2"
        app:layout_constraintRight_toRightOf="@+id/activity_main2"
        app:layout_constraintTop_toTopOf="@+id/activity_main2"
        app:layout_constraintVertical_bias="0.85"/>

    <ImageView
        android:id="@+id/main_imageViewLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp10"
        app:layout_constraintRight_toLeftOf="@+id/mian_anchor"
        app:layout_constraintTop_toTopOf="@+id/mian_anchor"
        app:srcCompat="@mipmap/smallappicon4"/>

    <TextView
        android:id="@+id/main_textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:text="@string/app_name"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/sp22"
        app:layout_constraintLeft_toRightOf="@+id/main_imageViewLogo"
        app:layout_constraintTop_toTopOf="@+id/main_imageViewLogo"/>

    <TextView
        android:id="@+id/textViewSlogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:text="@string/slogan"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="@+id/main_imageViewLogo"
        app:layout_constraintLeft_toRightOf="@+id/main_imageViewLogo"/>


</android.support.constraint.ConstraintLayout>


