<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroudLight"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/layoutTopBar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#40a5c6"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/topBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="#00000000" />

        <TextView
            android:id="@+id/topTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/topMessage"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginRight="10dp"
            android:background="#00000000"
            android:src="@mipmap/message_iconunread" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layoutPersonal"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/colorWhite">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imageViewAvatar"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14.5dp"

            fresco:placeholderImage="@mipmap/icon_userimage"
            fresco:roundedCornerRadius="23.5dp" />


        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="23.5dp"
            android:layout_toRightOf="@id/imageViewAvatar"
            android:text="用户未登录"
            android:textColor="#4a4a4a"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageViewMore"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@mipmap/indicator_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutMyQuestion"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/imageViewQuestion"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/my_myquestions_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/imageViewQuestion"
            android:text="我的提问"
            android:textColor="#4a4a4a"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageViewMoreQuestion"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@mipmap/indicator_icon" />

        <ImageView
            android:id="@+id/imageViewNotify"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/imageViewMoreQuestion"
            android:src="@mipmap/icon_notify_indicator"
            android:visibility="invisible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="50dp"
            android:background="#e4e4e4" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutMyCollection"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/imageViewCollection"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/my_mycollect_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/imageViewCollection"
            android:text="我的收藏"
            android:textColor="#4a4a4a"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageViewMoreCollection"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@mipmap/indicator_icon" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="50dp"
            android:background="#e4e4e4" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutSetting"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/imageViewSetting"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/my_setting_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/imageViewSetting"
            android:text="设置"
            android:textColor="#4a4a4a"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageViewMoreSetting"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@mipmap/indicator_icon" />
    </RelativeLayout>
</LinearLayout>